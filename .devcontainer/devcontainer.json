{
  "name": "Go Dev Container",
  "dockerComposeFile": [
    "./docker-compose.yml",
    // "./docker-compose-vscode.yml",
    "./docker-compose-vscode-codespaces.yml",
  ],
  // "image": "mcr.microsoft.com/vscode/devcontainers/base:ubuntu-22.04",
  // "runServices": [
  //   "dev"
  // ],
  "containerEnv": {
    "FLUTTER_ROOT": "${localWorkspaceFolder}/.containers/android-studio/flutter",
    "LOCAL_CONTAINER_INSTALL": "true",
    "MAKE_DEV_ON_START": "true",
    "MAKE_TESTS_ON_START": "true",
  },
  "service": "dev",
  // "initializeCommand": "${localWorkspaceFolder}/.devcontainer/initialize-cmd.sh",
  "workspaceFolder": "${localWorkspaceFolder}",
  "customizations": {
    "vscode": {
      // ðŸš« EmpÃªche VSCode de rechercher ou indexer ces dossiers lourds
      "search.exclude": {
        "**/node_modules": true,
        "**/dist": true,
        "**/build": true,
        "**/.git": true,
        "**/.devcontainer": false,
        "**/.containers": true,
        "**/.next": true,
        "**/.cache": true
      },
      // ðŸ’¤ DÃ©sactive la surveillance en temps rÃ©el sur ces dossiers
      "files.watcherExclude": {
        "**/node_modules/**": true,
        "**/dist/**": true,
        "**/build/**": true,
        "**/.git/**": true,
        "**/.cache/**": true
      },
      // ðŸ’¨ (optionnel) RÃ©duit la charge sur la recherche globale
      "search.followSymlinks": false,
      // ðŸ§  (optionnel) Exclut les node_modules de lâ€™explorateur de fichiers
      "files.exclude": {
        "**/node_modules": true
      },
      "editor.fontLigatures": false,
      "editor.formatOnSave": true,
      "editor.inlineSuggest.enabled": true,
      "explorer.confirmDelete": false,
      "files.hotExit": "onExitAndWindowClose",
      "genieai.enableConversationHistory": true,
      "genieai.openai.model": "gpt-4",
      "genieai.promptPrefix.addComments-enabled": false,
      "git.enabled": true,
      "remote.autoForwardPortsSource": "process",
      "search.showLineNumbers": true,
      "terminal.integrated.profiles.linux": {
        "bash": {
          "path": "bash",
          "icon": "terminal-debian",
          "color": "terminal.ansiRed"
        }
      },
      "diffEditor.hideUnchangedRegions.enabled": false,
      "workbench.activityBar.location": "top",
      "window.customTitleBarVisibility": "windowed",
      "terminal.integrated.defaultProfile.linux": "bash",
      "window.commandCenter": false,
      // "workbench.colorTheme": "Dark Theme - JetBrains IDE",
      // "workbench.colorTheme": "Hacker Red",
      // "workbench.colorTheme": "Best Themes - Monokai Pirokai Beach Sunset",
      "workbench.colorTheme": "Hacker Red",
      // "workbench.colorTheme": "Low Eye Strain Light Contrast",
      "workbench.iconTheme": "material-icon-theme",
      "material-icon-theme.folders.theme": "specific",
      "workbench.layoutControl.enabled": false,
      "zenMode.centerLayout": false,
      "zenMode.hideLineNumbers": false,
      "diffEditor.ignoreTrimWhitespace": false,
      "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
      },
      "workbench.editor.editorActionsLocation": "titleBar",
      "[dockercompose]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "advanced",
        "editor.defaultFormatter": "redhat.vscode-yaml"
      },
      "vsicons.dontShowNewVersionMessage": true,
      "files.autoSave": "onFocusChange",
      "extensions": [
        "bierner.markdown-mermaid",
        "codeium.codeium",
        "genieai.chatgpt-vscode",
        "lakshits11.best-themes-redefined",
        "me-dutour-mathieu.vscode-github-actions",
        "ms-azuretools.vscode-docker",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "openai.chatgpt",
        "pkief.material-icon-theme",
        "redhat.vscode-yaml",
        "shd101wyy.markdown-preview-enhanced",
        "standard.vscode-standard",
        "toba.vsfire",
        "cosmicsarthak.cosmicsarthak-neon-theme",
        "xynny.hackerred"
      ]
    }
  }
}